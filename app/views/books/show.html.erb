<div id="page-wrapper" style="min-height: 353px;">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Book details</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= image_tag(@book.first.image.url(:medium)) %>
    </div>
  </div>

  <div class="row top-buffer">
    <div class="col-md-12">
      <strong>Title : </strong> <%= @book.first.title %>
    </div>
  </div>

  <div class="row top-buffer">
    <div class="col-md-12">
      <strong>Author : </strong> <%= @book.first.author %>
    </div>
  </div>
</div>